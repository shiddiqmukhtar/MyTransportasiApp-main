#:import MapView kivy_garden.mapview.MapView
#:import GpsBlinker gpsblinker.GpsBlinker
 
<TrafficImageMapView>:
    zoom: 14
    double_tap_zoom: True
    on_zoom:
        self.zoom = 14 if self.zoom < 14 else self.zoom # set minimum zoom = 14
    on_lat:
        self.start_getting_trafficimage_in_fov() # on getting latitude
    on_lon:
        self.start_getting_trafficimage_in_fov() # on getting longitude
    GpsBlinker:
        lat: root.lat
        lon: root.lon
        id: trafficimageblinker