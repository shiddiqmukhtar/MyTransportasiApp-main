#:import utils kivy.utils
#:import BusArrivalHeader busarrivalbanner.BusArrivalHeader
#:import BusArrivalBanner busarrivalbanner.BusArrivalBanner
 
<BusArrivalScreen>:
    FloatLayout:
        GridLayout:
            id: busarrivalheadercontainer
            pos_hint: {"top": .895, "left": 1}
            size_hint: 1, .1
            cols: 1
        ScrollView:
            pos_hint: {"top": .795, "left": 1}
            size_hint: 1, .695
            MDGridLayout:
                id: busarrivalscrollcontainer
                cols: 1
                adaptive_height: True
                row_default_height: '100dp'
                row_force_default: True
                spacing: 2,2
        GridLayout:
            rows: 1
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            ImageButton:
                source: "icons/back.png"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                on_release:
                    app.change_screen("bus_stop_screen", direction='left', mode='pop')