#:import utils kivy.utils
 
<BusRouteScreen>:
    FloatLayout:
        GridLayout:
            cols: 1
            id: busroutebackdrop
            pos_hint: {"top": .895, "left": 1}
            size_hint: 1, .89
        GridLayout:
            rows: 1
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            LabelButton:
                text: "[u]Home[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                markup: True
                on_release:
                    app.restore_nearbybusstop()
                    app.restore_nearby_bus_services()
                    app.change_screen("home_screen", direction='left', mode='pop')
            LabelButton:
                text: "[u]Bus Stops[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": .666}
                markup: True
                on_release:
                    app.change_screen("bus_stop_screen", direction='right', mode='push')
            LabelButton:
                text: "[u]Bus Services[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": 1}
                markup: True
                on_release:
                    app.change_screen("bus_service_screen", direction='left', mode='push')