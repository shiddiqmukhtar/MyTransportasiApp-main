#:import utils kivy.utils
 
<TrainMapScreen>:
    FloatLayout:
        GridLayout:
            cols: 1
            pos_hint: {"top": .895, "left": 1}
            size_hint: 1, .795
            StencilView:
                id: stencil
                Scatter:
                    id: scatter
                    pos: stencil.pos
                    size: my_image.size
                    on_touch_down: app.touch_event(args[1])
                    AsyncImage:
                        id: my_image
                        source: 'https://www.sgtrains.com/img/guide/systemmap.png'
                        allow_stretch: True
                        keep_ratio: True
                        size: stencil.width, stencil.height
        GridLayout:
            rows: 1
            size_hint: 1, .1
            pos_hint: {"top": .1, "right": 1}
            LabelButton:
                text: "[u]Back[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                markup: True
                on_release:
                    app.change_screen("home_screen", direction='left', mode='pop')
            LabelButton:
                text: "[u]MRT/LRT[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": 1}
                markup: True
                on_release:
                    app.change_screen("mrtlrt_screen", direction='right', mode='push')
            LabelButton:
                text: "[u]Service\nAlert[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": .666}
                markup: True
                on_release:
                    app.change_screen("trainservicealert_screen", direction='up', mode='push')
            LabelButton:
                text: "[u]Train\nMap[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": .666}
                markup: True
                on_release:
                    app.change_screen("trainmap_screen", direction='down', mode='push')
            LabelButton:
                text: "[u]Fare[/u]"
                canvas.before:
                    Color:
                        rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                    Rectangle:
                        size: self.size
                        pos: self.pos
                #size_hint: .33, .1
                #pos_hint: {"top": .1, "right": 1}
                markup: True
                on_release:
                    app.change_screen("trainfare_screen", direction='left', mode='push')